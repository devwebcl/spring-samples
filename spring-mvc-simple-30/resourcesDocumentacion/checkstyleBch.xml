<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "documentacionResources\configuration_1_3.dtd">

<module name="Checker">
    <module name="SuppressionFilter">
        <property name="file" value="resourcesDocumentacion\suppressions.xml"/>
    </module>
    <module name="TreeWalker">
       <module name="JavadocMethod">
           <property name="scope" value="public"/>
           <property name="ignoreMethodNamesRegex" value="^test.*$"/>
           <property name="allowedAnnotations" value="Override,AnotacionEximidaDeValidacion,Service,Proxy,Blablabla"/>
        </module>
        <module name="JavadocVariable">
            <property name="scope" value="public"/>
        </module>
        <module name="JavadocType"/>
        <module name="JavadocStyle"/>
    </module>

</module>
